  <main class="login-container">
    <h1>Sign In</h1>
    <form id="login-form">
      <label>
        ✉️ Email
        <input type="email" id="email" required />
      </label>
      <label>
        🔒 Password
        <input type="password" id="password" required />
      </label>
      <button type="submit">Log In</button>
    </form>
    <div id="message"></div>
  </main>